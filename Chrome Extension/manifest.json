{
    "name": "TCR for Github Voting",
    "version": "1.0",
    "description": "Voting on Github PRs through TCR.",
    "manifest_version": 2,

    "options_page": "options.html",

    "browser_action": {
		//"default_icon": "icon64.png",
		"default_popup": "popup.html"
	},

	"background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["https://github.com/*"]
    }],

    "permissions": [
		"tabs", "<all_urls>",
		"storage"
	]
}